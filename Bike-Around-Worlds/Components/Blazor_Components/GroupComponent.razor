@inject NavigationManager NavigationManager;

@using BAWLib
@using Domain.Interfaces
<div class="card border-secondary mb-3" @onclick="NavitageToGroup" style="max-width: 18rem;">
    <div class="card-header d-flex justify-content-around">
        <h4>
            @Group!.Name
        </h4>
        <div>
            <h4>
                @Group.GetMemberCount()
                <i class="bi bi-person-fill"></i>
            </h4>
        </div>
    </div>
    <div class="card-body text-secondary">

    </div>
</div>
















@code {
     [Parameter] public Groups? Group { get; set; }
     private void NavitageToGroup()
     {
         NavigationManager.NavigateTo($"/groupDetailsView/{Group!.Group_Id}");
     }


}