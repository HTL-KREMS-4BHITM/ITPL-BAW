@inject NavigationManager NavigationManager;
@using BAWLib
<div class="card border-secondary mb-3" @onclick="NavitageToGroup" style="max-width: 18rem;">
    <div class="card-header">@*@Group.Federal_State*@ @Group.Name</div>
    <div class="card-body text-secondary">
        <h5 class="card-title">@Group.Waypoints</h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    </div>
</div>
















@code {
     [Parameter] public Groups Group { get; set; }

     private void NavitageToGroup()
     {
         NavigationManager.NavigateTo("/groupDetailsView");
     }
}