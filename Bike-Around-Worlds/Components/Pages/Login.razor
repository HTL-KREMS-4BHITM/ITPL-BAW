@page "/login"

<div class="section-login py-5">
    <div class="container">
        <h3 class="text-center mb-4">Login</h3>
        <div class="row justify-content-center align-items-stretch">
            <div class="col-lg-4 d-flex me-0 pe-0 align-items-center">
                <img src="Resources/bike1.jpg" class="img-fluid shadow form-height" alt="Bike Pic">
            </div>

            <div class="login_container col-lg-4 ms-0 ps-0 h-100">
                <form class="p-4 border rounded-end-2 shadow">
                    <div class="mb-4 mt-5 pt-4 border-bottom border-secondary">
                        <input type="text" class="form-control " id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Benutzername">
                    </div>
                    <div class="mb-5 mt-3 border-bottom border-secondary">
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Passwort">
                    </div>

                    <button type="submit" class="col-2 btn btn-primary w-100 mb-5 mt-3 pb-2">Log In</button>
                </form>
            </div>
        </div>
    </div>
</div>


<style>
    .form-height {
        height: 100%;
        object-fit: cover;
    }
</style>

